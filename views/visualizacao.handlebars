<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/menu-lateral.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/colunas-tarefas.css">
    <title>Visualização de Tarefas</title>

</head>

<body>
    <main class="conteudo-visualizacao">
        <aside class="menu-lateral">
            <div class="user">
                <a href="/perfil?name={{userName}}&email={{email}}"><img src="/img/user.svg" alt="icone user"></a>
                <p>Welcome back, <strong>{{userName}}!</strong></p>
            </div>
            <hr class="hr-menu">

            <ul>
                <div class="link" style="background-color: #f0eeee;">
                    <img src="/img/home-page.svg" alt="">
                    <li><a href="/visualizacao?name={{userName}}&email={{email}}">Home</a></li>
                </div>

                <div class="link">
                    <img src="/img/Myprofile.svg" alt="">
                    <li><a href="/perfil?name={{userName}}&email={{email}}">My Profile</a></li>
                </div>

                <div class="link">
                    <img src="/img/bell.svg" alt="">
                    <li><a href="/notificacoes?name={{userName}}&email={{email}}">Notification</a></li>
                </div>

            </ul>
        </aside>

        <section class="conteudo-tarefas">
            <header class="fixed">
                <div class="header">
                    <h3>Task Tracker Drafts</h3>
                    <div class="itens-header">
                        <a href="https://github.com/JenniGabriely01/to-do-list" target="_blank">
                            <img src="/img/info.svg" alt="lupa">
                        </a>
                        <a class="add-task" href="/register">+ Add task</a>
                    </div>
                </div>
                <hr class="hr-header">
            </header>



            <div class="colunas">

                <div class="coluna-to-do">
                    <h3>To Do</h3>
                    {{#each toDoTasks}}
                    <div class="card-tarefa">
                        <div class="titulos-task">
                            <h4>{{nome}}</h4>
                            <a href="/visualizacao/{{id}}">View Details</a>
                            <p>{{data_criacao}}</p>
                        </div>

                        <div class="buttons">
                            <button class="categoria">
                                {{categoria}}
                            </button>
                            {{#ifEquals nivel_importancia 'alto'}}
                            <button class="importance-btn high-importance">High importance</button>
                            {{else ifEquals nivel_importancia 'medio'}}
                            <button class="importance-btn medium-importance">Medium importance</button>
                            {{else ifEquals nivel_importancia 'baixo'}}
                            <button class="importance-btn low-importance">Low importance</button>
                            {{/ifEquals}}
                        </div>

                    </div>
                    {{/each}}
                </div>

                <div class="coluna-in-progress">
                    <h3>In Progress</h3>
                    {{#each inProgressTasks}}
                    <div class="card-tarefa">

                        <div class="titulos-task">
                            <h4>{{nome}}</h4>
                            <a href="/visualizacao/{{id}}">View Details</a>
                            <p>{{data_criacao}}</p>
                        </div>

                        <div class="buttons">
                            <button class="categoria">
                                {{categoria}}
                            </button>
                            {{#ifEquals nivel_importancia 'alto'}}
                            <button class="importance-btn high-importance">High importance</button>
                            {{else ifEquals nivel_importancia 'medio'}}
                            <button class="importance-btn medium-importance">Medium importance</button>
                            {{else ifEquals nivel_importancia 'baixo'}}
                            <button class="importance-btn low-importance">Low importance</button>
                            {{/ifEquals}}
                        </div>

                    </div>
                    {{/each}}
                </div>

                <div class="coluna-done">
                    <h3>Done</h3>
                    {{#each doneTasks}}
                    <div class="card-tarefa">
                        <div class="titulos-task">
                            <h4>{{nome}}</h4>
                            <a href="/visualizacao/{{id}}">View Details</a>
                            <p>{{data_criacao}}</p>
                        </div>

                        <div class="buttons">
                            <button class="categoria">
                                {{categoria}}
                            </button>
                            {{#ifEquals nivel_importancia 'alto'}}
                            <button class="importance-btn high-importance">High importance</button>
                            {{else ifEquals nivel_importancia 'medio'}}
                            <button class="importance-btn medium-importance">Medium importance</button>
                            {{else ifEquals nivel_importancia 'baixo'}}
                            <button class="importance-btn low-importance">Low importance</button>
                            {{/ifEquals}}
                        </div>

                    </div>
                    {{/each}}
                </div>
            </div>

        </section>
    </main>


</body>

</html>