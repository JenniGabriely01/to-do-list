<head>
    <link rel="stylesheet" href="/css/menu-lateral.css">
    <link rel="stylesheet" href="/css/header.css">
    <link rel="stylesheet" href="/css/notificacoes.css">
</head>

<main class="conteudo-visualizacao">
    <aside class="menu-lateral">
        <div class="user">
            <a href="/perfil?name={{userName}}&email={{email}}"><img src="/img/user.svg" alt="icone user"></a>
            <p>Welcome back, <strong>{{userName}}!</strong></p>
        </div>
        <hr class="hr-menu">

        <ul>
            <div class="link">
                <img src="/img/home.svg" alt="">
                <li><a href="/visualizacao?name={{userName}}&email={{email}}">Home</a></li>
            </div>

            <div class="link">
                <img src="/img/Myprofile.svg" alt="">
                <li><a href="/perfil?name={{userName}}&email={{email}}">My Profile</a></li>
            </div>

            <div class="link" style="background-color: #f0eeee;">
                <img src="/img/bell-page.svg" alt="">
                <li><a href="/notificacoes?name={{userName}}&email={{email}}">Notification</a></li>
            </div>

        </ul>
    </aside>

    <section class="conteudo-tarefas">
        <header class="fixed">
            <div class="header">
                <h3>Notifications</h3>
                <div class="itens-header">
                    <a href="https://github.com/JenniGabriely01/to-do-list" target="_blank">
                        <img src="/img/info.svg" alt="icone info">
                    </a>
                    <a class="add-task" href="/register?name={{userName}}&email={{email}}">+ Add task</a>
                </div>
            </div>
            <hr class="hr-header">
        </header>
    </section>

</main>

<section class="container-notificacoes">

    <div class="conteudo-notications">
        <h3>Recent Notifications</h3>

        {{!-- caso não tenha notificações --}}
        {{#if noNotifications}}
        <p>No notifications at this time.</p>
        {{else}}

        {{!-- caso expire hoje --}}
        {{#if notificationsToday}}
        <div class="notifications">
            <div class="titulo-notificacoes">
                <img src="/img/hora.svg" alt="">
                <h2>Your task expires today!</h2>
            </div>
            {{#each notificationsToday}}
            <div class="notification">
                <p>{{{this}}}</p>
            </div>
            {{/each}}
        </div>
        {{/if}}

        {{!-- caso a tarefa expire amanhã --}}
        {{#if notificationsTomorrow}}
        <div class="notifications">
            <div class="titulo-notificacoes">
                <img src="/img/hora.svg" alt="">
                <h2>Your task expires tomorrow!</h2>
            </div>
            {{#each notificationsTomorrow}}
            <div class="notification">
                <p>{{{this}}}</p>
            </div>
            {{/each}}
        </div>
        {{/if}}

        {{!-- caso a tarefa tenha expirado --}}
        {{#if notificationsExpired}}
        <div class="notifications">
            <div class="titulo-notificacoes">
                <img src="/img/alert.svg" alt="">
                <h2>A Task Just Expired!</h2>
            </div>
            {{#each notificationsExpired}}
            <div class="notification">
                <p>{{{this}}}</p>
            </div>
            {{/each}}
        </div>
        {{/if}}
        {{/if}}
    </div>
</section>
